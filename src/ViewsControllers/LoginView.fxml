<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewsControllers.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="166.0" layoutY="56.0" prefHeight="288.0" prefWidth="269.0" spacing="30.0">
         <children>
            <Label fx:id="loginMessageLabel" alignment="CENTER" prefHeight="72.0" prefWidth="244.0" text="Welcome">
               <font>
                  <Font name="Arial" size="12.0" />
               </font></Label>
            <GridPane alignment="CENTER" prefHeight="90.0" prefWidth="269.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label fx:id="userNameLabel" alignment="CENTER" prefHeight="17.0" prefWidth="143.0" text="Username">
                     <font>
                        <Font size="22.0" />
                     </font></Label>
                  <Label fx:id="passwordLabel" alignment="CENTER" prefHeight="17.0" prefWidth="138.0" text="Password" GridPane.rowIndex="1">
                     <font>
                        <Font size="22.0" />
                     </font></Label>
                  <TextField fx:id="userNameTextField" prefHeight="34.0" prefWidth="134.0" GridPane.columnIndex="1" />
                  <PasswordField fx:id="passwordField" prefHeight="34.0" prefWidth="134.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" prefHeight="24.0" prefWidth="170.0" style="-fx-background-color: lightblue; -fx-border-color: grey; -fx-border-radius: 5;" text="Login">
               <font>
                  <Font size="18.0" />
               </font></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
