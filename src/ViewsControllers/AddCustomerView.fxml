                                <TextField fx:id="customerPostalCodeTextField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                <TextField fx:id="customerCountryTextField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                                <TextField fx:id="customerCityTextField" layoutX="304.0" layoutY="269.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                            </children>
                        </GridPane>
                        <HBox alignment="CENTER_RIGHT" prefHeight="65.0" prefWidth="578.0" spacing="10.0">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                            <children>
                                <Button fx:id="saveNewCustomerButton" mnemonicParsing="false" onAction="#saveNewCustomer" prefHeight="44.0" prefWidth="232.0" style="-fx-background-color: lightblue;" text="Add Customer">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Button>
                                <Button fx:id="cancelNewCustomerButton" mnemonicParsing="false" onAction="#cancelNewCustomer" prefHeight="42.0" prefWidth="98.0" style="-fx-background-color: lightblue;" text="Cancel">
